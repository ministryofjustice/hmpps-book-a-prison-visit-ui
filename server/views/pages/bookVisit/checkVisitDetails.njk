{% extends "../../partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% set pageTitle = "Check the visit details before booking" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">Check the visit details before booking</h1>

      {% include "partials/errorSummary.njk" %}

      {% set displayRows = [
        {
          key: {
            text: "Prisoner"
          },
          value: {
            html: '<span data-test="prisoner-name">' +
              prisoner.firstName | capitalize + " " + prisoner.lastName | capitalize + 
              "</span>"
          }
        }
      ] %}

      {% set visitorsDisplay %}
        {% for visitor in visitors %}
          <p><span data-test="visitor-name-{{ loop.index }}">{{ visitor.firstName | safe }} {{ visitor.lastName | safe }} ({{ visitor.dateOfBirth | displayAge }})</span></p>
        {% endfor %}
      {% endset %}

      {% set displayRows = (displayRows.push(
        {
          key: {
            text: 'Visitors'
          },
          value: {
            html: visitorsDisplay
          },
          actions: {
            items: [
              {
                href: "/book-visit/select-visitors",
                text: "Change",
                classes: "govuk-link--no-visited-state",
                visuallyHiddenText: "visitors",
                attributes: { "data-test": "change-visitors" }
              }
            ]
          }
        }
      ), displayRows) %}

      {% set displayRows = (displayRows.push(
        {
          key: {
            text: "Date and time"
          },
          value: {
            html: "<p><span data-test='visit-date'>" + visitSlot | formatDate("EEEE d MMMM yyyy") + "</span></p>
              <p><span data-test='visit-time'>" + visitTimeslot.startTime | formatTime + " to " + visitTimeslot.endTime | formatTime + "</span></p>"
          },
          actions: {
            items: [
              {
                href: "/book-visit/choose-visit-time",
                text: "Change",
                classes: "govuk-link--no-visited-state",
                visuallyHiddenText: "time",
                attributes: { "data-test": "change-time" }
              }
            ]
          }
        },
        {
          key: {
            text: "Additional support requests"
          },
          value: {
            html: '<p data-test="additional-support">' + (additionalSupport | d("None", true)) + '</p>'
          },
          actions: {
            items: [
              {
                href: "/book-visit/additional-support",
                text: "Change",
                classes: "govuk-link--no-visited-state",
                visuallyHiddenText: "additional support requests",
                attributes: { "data-test": "change-additional-support" }
              }
            ]
          }
        }
      ), displayRows) %}

      {% set displayRows = (displayRows.push(
        {
          key: {
            text: "Main contact"
          },
          value: {
            html: '<p><span data-test="main-contact-name">' + mainContactName + '</span></p>
              <p><span data-test="main-contact-number">' + mainContactNumber | d("No phone number provided") + "</span></p>"
          },
          actions: {
            items: [
              {
                href: "/book-visit/main-contact",
                text: "Change",
                classes: "govuk-link--no-visited-state",
                visuallyHiddenText: "main contact",
                attributes: { "data-test": "change-main-contact" }
              }
            ]
          }
        }
      ), displayRows) %}

      {{ govukSummaryList({
          rows: displayRows
      }) }}

      <form action="/book-visit/check-visit-details" method="POST" novalidate>
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">

        {{ govukButton({
          text: "Submit booking",
          classes: "govuk-!-margin-top-3",
          preventDoubleClick: true,
          attributes: { "data-test": "submit-booking" }
        }) }}
      </form>
    </div>
  </div>

{% endblock %}
