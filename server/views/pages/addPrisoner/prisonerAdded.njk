{% extends "partials/layout.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = "Prisoner added" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: pageTitle
      }) }}

      <p>The prisoner details you submitted were successfully matched.</p>

      <p>
        To book a visit for this prisoner, you need to add visitors</a>.
      </p>

      {{ govukButton({
        text: "Add visitors",
        href: paths.ADD_VISITOR.START,
        attributes: { "data-test": "add-visitors-button" },
        preventDoubleClick: true
      }) }}

    </div>
  </div>
{% endblock %}
